moduledir=/data/adb/modules/gameoptd

menu() {
echo ""
echo "Game Optimization Daemon"
echo ""
echo "Status:"
if [[ "$(cat "$moduledir/toggler/enable_notification")" == "1" ]]
then
echo "Notification= Enable"
else
echo "Notification= Disable"
fi
if [[ "$(cat "$moduledir/toggler/enable_gpu_tune")" == "1" ]]
then
echo "GPU_Tune= Enable"
else
echo "GPU_Tune= Disable"
fi
echo ""
echo "Changes applied after reboot"
echo ""
select menu in Notification GPU_Tune Exit; do 
      if [ "$menu" = "Notification" ]; then   
notification
    elif [ "$menu" = "GPU_Tune" ]; then 
gputune
    elif [ "$menu" = "Exit" ]; then 
exit
        else
echo ""
echo "Invalid"
echo ""
        exit
        fi
done
}

notification() {
echo ""
echo "Notification Control"
echo ""
select menu in Enable Disable; do 
      if [ "$menu" = "Enable" ]; then       
echo "1" > $moduledir/toggler/enable_notification
menu
    elif [ "$menu" = "Disable" ]; then 
echo "0" > $moduledir/toggler/enable_notification
menu
        else
echo ""
echo "Invalid"
echo ""
        exit
        fi
done
}

gputune() {
echo ""
echo "GPU Tune Control"
echo ""
select menu in Enable Disable; do 
      if [ "$menu" = "Enable" ]; then       
echo "1" > $moduledir/toggler/enable_gpu_tune
menu
    elif [ "$menu" = "Disable" ]; then 
echo "0" > $moduledir/toggler/enable_gpu_tune
menu
        else
echo ""
echo "Invalid"
echo ""
        menu
        fi
done
}

menu